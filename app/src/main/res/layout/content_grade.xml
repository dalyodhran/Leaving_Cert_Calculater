<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="iedalyo25.dcu.computing.leavingcertcalculater.GradeActivity"
    tools:showIn="@layout/activity_grade"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Grade"
        android:id="@+id/tvGraInfo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1. Subject"
            android:id="@+id/tvSubG1"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade1"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2. Subject"
            android:id="@+id/tvSubG2"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade2"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3. Subject"
            android:id="@+id/tvSubG3"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade3"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4. Subject"
            android:id="@+id/tvSubG4"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade4"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5. Subject"
            android:id="@+id/tvSubG5"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade5"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6. Subject"
            android:id="@+id/tvSubG6"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:layout_weight="0.45" />

        <Spinner
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/spGrade6"
            android:layout_weight="0.06"
            android:entries="@array/Grade"/>
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/btnConG"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"/>

</LinearLayout>
