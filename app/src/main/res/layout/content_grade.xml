<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="iedalyo25.dcu.computing.leavingcertcalculater.GradeActivity"
    tools:showIn="@layout/activity_grade"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvGraInfo"
        android:id="@+id/tvGraInfo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG1"
            android:id="@+id/tvSubG1"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45sp"
            android:id="@+id/spGrade1"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG2"
            android:id="@+id/tvSubG2"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spGrade2"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG3"
            android:id="@+id/tvSubG3"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spGrade3"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG4"
            android:id="@+id/tvSubG4"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spGrade4"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG5"
            android:id="@+id/tvSubG5"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spGrade5"
            android:entries="@array/Grade"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tvSubG6"
            android:id="@+id/tvSubG6"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="5sp"
            android:textSize="20sp"
            android:gravity="start|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/spGrade6"
            android:entries="@array/Grade"/>
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnConG"
        android:id="@+id/btnConG"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"/>

</LinearLayout>
